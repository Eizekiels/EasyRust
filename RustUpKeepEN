    <script>
        // Actions for subscription buttons
        document.getElementById("standardBtn").addEventListener("click", function() {
            alert("You have chosen the Standard service. You will be redirected to payment.");
            window.location.href = "https://www.paypal.com";
        });

        document.getElementById("vipBtn").addEventListener("click", function() {
            alert("You have chosen the VIP service. You will be redirected to payment.");
            window.location.href = "https://www.paypal.com";
        });

        // Action for contact form
        document.getElementById("contactForm").addEventListener("submit", function(event) {
            event.preventDefault(); // Prevent form submission

            // Get form values
            const name = document.getElementById("name").value;
            const email = document.getElementById("email").value;
            const message = document.getElementById("message").value;

            // Display confirmation message
            const formMessage = document.getElementById("formMessage");
            formMessage.textContent = `Thank you ${name}! We have received your message and will respond at ${email}.`;

            // Reset form
            document.getElementById("contactForm").reset();
        });
    </script>
